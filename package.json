{
  "name": "job-portal",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise job portal for unskilled workers in India",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/Job_Portal.git"
  },
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "build": "pnpm --filter web build",
    "build:web": "pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "start": "pnpm --filter web start",
    "start:web": "pnpm --filter web start",
    "start:api": "pnpm --filter api start",
    "lint": "pnpm --filter web lint",
    "lint:fix": "pnpm --filter web lint --fix",
    "format": "prettier --write \"**/*.{js,ts,jsx,tsx,json,md}\"",
    "type-check": "pnpm --filter web type-check",
    "test": "echo \"Tests not yet implemented\"",
    "clean": "rm -rf node_modules apps/*/node_modules apps/*/.next"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  }
}
